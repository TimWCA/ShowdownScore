            android:layout_width="213dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerA"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp"/>
    <TextView
            android:text="Игрок A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            tools:layout_editor_absoluteY="61dp" tools:layout_editor_absoluteX="17dp"/>
    <Button
            android:text="A"
            android:layout_width="47dp"
            android:layout_height="45dp" android:id="@+id/buttonServingA"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="350dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="229dp" android:layout_marginStart="229dp" android:layout_marginEnd="455dp"
            android:layout_marginRight="455dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="btnServingA"/>
    <com.google.android.material.imageview.ShapeableImageView android:layout_width="213dp" android:layout_height="213dp"
                                                              android:id="@+id/square1" android:visibility="visible"
                                                              android:background="#707070"
                                                              tools:layout_editor_absoluteY="99dp"
                                                              tools:layout_editor_absoluteX="341dp"/>
    <com.google.android.material.imageview.ShapeableImageView android:layout_width="213dp" android:layout_height="213dp"
                                                              android:id="@+id/square2" android:visibility="visible"
                                                              android:background="#707070"
                                                              tools:layout_editor_absoluteY="99dp"
                                                              tools:layout_editor_absoluteX="16dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playerBScoreText"
            android:textSize="96sp"
            android:textColor="#FFFFFF" tools:layout_editor_absoluteY="130dp"
            tools:layout_editor_absoluteX="354dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playerAScoreText"
            android:textSize="96sp"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteY="141dp" tools:layout_editor_absoluteX="87dp"/>
    <Button
            android:text="+1"
            android:layout_width="58dp"
            android:layout_height="45dp" android:id="@+id/add1PointToA"
            tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="150dp"/>
    <Button
            android:text="+2"
            android:layout_width="58dp"
            android:layout_height="45dp" android:id="@+id/add2PointsToA"
            tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="38dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/buttonUndo"
            tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="257dp"/>
    <TextView
            android:text="Подача: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/serving"
            android:textSize="20sp"
            tools:layout_editor_absoluteY="374dp" tools:layout_editor_absoluteX="245dp"/>
    <TextView
            android:text="Счёт: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreText"
            tools:layout_editor_absoluteY="61dp" tools:layout_editor_absoluteX="597dp"/>
    <TextView
            android:text="Сет: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/setText"
            tools:layout_editor_absoluteY="32dp" tools:layout_editor_absoluteX="597dp"/>
    <Button
            android:text="СБРОС"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonReset"
            tools:layout_editor_absoluteY="101dp" tools:layout_editor_absoluteX="599dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

