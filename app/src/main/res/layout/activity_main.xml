<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="+1"
            android:layout_width="58dp"
            android:layout_height="45dp" android:id="@+id/add1PointToB"
            tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="474dp"/>
    <Button
            android:text="+2"
            android:layout_width="58dp"
            android:layout_height="45dp" android:id="@+id/add2PointsToB"
            tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="362dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerB"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="341dp"/>
    <Button
            android:text="B"
            android:layout_width="47dp"
            android:layout_height="45dp" android:id="@+id/buttonServingB"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="293dp"/>
    <TextView
            android:text="Игрок B"
            android:layout_width="55dp"
            android:layout_height="22dp" android:id="@+id/textView3"
            tools:layout_editor_absoluteY="61dp" tools:layout_editor_absoluteX="339dp"/>
